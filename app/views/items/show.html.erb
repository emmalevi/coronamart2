<section id="steps" class="steps section-bg">
  <div class="container">
    <div class="row no-gutters">
      <div class="col-lg-4 mt-5">
      </div>
    </div>
  </div>
</section>




<section id="contact" class="contact">
  <div class="container">
    <br>
    <div class="section-title">
      <h2> <%= @item.name %> </h2>
      <p> <%= @item.description %> </p>
    </div>
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-6 col-12">
        <br>
        <div class="info">
          
          <i class="icofont-google-map">
          <% if current_user && current_user.avatar.attached? %>
          <%= cl_image_tag(current_user.avatar.key, class: "avatar") %>
          <% else %>
          <%= cl_image_tag("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQELeEyiMdyGS4I3hdD6rQ-1IS3zkwA7hAB0LTayKpG0wEUVBjdyA&s", class: "avatar") %>
          <% end %>
          </i>
          <h4>Owner</h4>
          <p>Item listed by Sagi Amar</p>
          
          <div class="email mt-4">
            <i class="icofont-envelope"></i>
            <h4>Booking rate</h4>
            <p> <strong>$ <%= @item.price %> a day</strong></p>
          </div>
        </div>
      </div>
      <div class="col-lg-6 col-md-6 col-12">
        <div class=container-img>
          <%= cl_image_tag(@item.photo.key, class:"lower-img", :crop => :fill)%>
        </div>
      </div>
    </div>
  </div>
  </section><!-- End Contact Section -->












  <section id="contact-book" class="contact">
    <div class=container>
    <div class="row justify-content-center">
      
      <div class="col-md-12 col-12 col-lg-6">
        <h4>Book Now for $<%=@item.price %> per day</h4>
      </p>
      <%= simple_form_for ([@item, @booking]) do |f| %>
      <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <div class="d-flex border-bottom pt-1 pb-2 justify-content-between">
        <p><strong>Total price </strong></p>
        <p><strong>$<%= @item.price %></strong></p>
      </div>
      <%= f.submit "Request Booking", id: "submit", style: "width: 100%" %>
      <% end %>
    </div>

