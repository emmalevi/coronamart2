<div class="banner2" style="background-image: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.4)), url('<%= cl_image_path @item.photo.key, height: 300, width: 400, crop: :fill %>')">
  <h1 id= "titleshow"><%= @capitalized_name %></h1>
</div>
<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="item-show-card">
        <h1><%= @item.name %></h1>
        <p class="item-show-address"><%= @item.description %></p>
      </div>
      <div class="item-show-card">
        <h3>A bit more about this item...</h3>
        <p><%= @item.description %></p>
        <div class="map" style="background-image: url('https://maps.googleapis.com/maps/api/staticmap?center=<%= @item.description %>&zoom=13&scale=2&size=1000x1000&maptype=roadmap&markers=color:red%7C<%= @item.description %>&key=AIzaSyBtaHK-BLhBg7TruJu8iKk_wETqZMJM-GY')"></div>
      </div>
    </div>
    <div class="col-4">
      <div class="item-show-card">
        <h5>Book this item!</h5>
        <form action="">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">From:</span>
            <input type=" text" class="form-control" placeholder="17/04/2020" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-addon" id="basic-addon1">To:</span>
            <input type="text" class="form-control" placeholder="18/04/2020" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </form>
      </div>
      <div class="item-show-card">
        <h3>Price</h3>
        <div class="flex">
          <div class="flex ml-3">
            <i class="fas fa-euro-sign"></i> <%= @item.price %>
          </div>
        </div>
      </div>
      <div class="item-show-card">
        <div class="flex-align">
          <h6 class="no-mb">Share</h6>
          <div class="flex">
            <i class="fab fa-facebook-square fa-2x mr-2"></i>
            <i class="fab fa-twitter-square fa-2x mr-2"></i>
            <i class="fab fa-pinterest-square fa-2x mr-2"></i>
            <i class="fa fa-envelope-square fa-2x"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
