<div class="container mt-5">
  <div>
    <%= simple_form_for(@item) do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :photo, as: :file %>
      <%= f.button :submit, class: 'btn btn-dark' %>
    <% end %>
  </div>
  <div class="text-center">
    <%= link_to "Back to all items", items_path, class: "btn btn-dark"%>
  </div>
</div>
