<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1584744982491-665216d95f8b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=900&q=60);">
  <div class="container">
    <h1>Welcome to Corona'Mart, world's first marketplace for Corona items.</h1>
    <p>Stay healthy and wealthy, sell and book your items.</p>
  </div>
</div>

      <p><span id="banner-typed-text"></span></p>
  </div>
</div>
<div class="container">
  <div class="row no-gutters">
    <% @items.each do |item| %>
      <div class="col-12 col-sm-6 col-md-4">
        <% if item.photo.attached? %>
          <% background_url = cl_image_path item.photo.key, width: 400, height: 500, crop: :fill %>
        <% else %>
          <% background_url = 'https://source.unsplash.com/500x400/?item' %>
        <% end %>
        <div class="item-card">
          <div class="card-img" style= "background-image:url('<%= background_url %>')"></div>
          <div class="item-card-body">
            <div class="card_title_flex">
              <h5><%= item.name.capitalize %></h5>
            </div>
            <%= link_to "Book it", item_path(item), class: "btn btn-flat" %>
           
           <div class="flex ml-3">
                <i class="material-icons mr-2">euro_symbol</i> <%= item.price %>
              </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>




  
